<% layout('layouts/boilerplate') -%>

 
<body>
  <div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0 offset-3 mt-5">
      <div class="card p-4">
        <div class="card-body">
          <h5 class="card-title">Delete Contact</h5>
          <p class="card-text">Do you want to delete this contact?</p>
          

          <div class="row">
            <!-- Cancel button -->
          <div class="col-2">
            <form action="/contacts/<%= contact._id  %>" method="GET">
              <button class="btn btn-primary">Cancel</button>
            </form>
          </div>
          
          <!-- delete button -->
          <div class="col-4">
            <form
            action="/contacts/<%= contact._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">Yes, delete.</button>
          </form>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
